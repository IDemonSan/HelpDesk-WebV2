@model IEnumerable<Empleado>

@{
ViewData["Title"] = "Lista de Empleados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Registrar" class="btn btn-primary">Registrar Empleado</a>
    
    <a asp-controller="Menu" asp-action="Index" class="btn btn-primary">Ver Menú</a>
</p>

<table class="table">
<thead>
<tr>
    <th>Nombre</th>
    <th>Apellido Paterno</th>
    <th>Apellido Materno</th>
    <th>Correo Corporativo</th>
    <th>Teléfono</th>
    <th></th>
</tr>
</thead>
<tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.nombre</td>
        <td>@item.ape_paterno</td>
        <td>@item.ape_materno</td>
        <td>@item.correo</td>
        <td>@item.telefono</td>
        <td>
            <a asp-action="Actualizar" asp-route-id="@item.id_empleado" class="btn btn-primary">Actualizar</a>
            <a asp-action="DeleteEmployee" asp-route-id="@item.id_empleado" class="btn btn-danger">Eliminar</a>
        </td>
    </tr>
}
</tbody>
</table>